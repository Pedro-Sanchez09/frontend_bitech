extends layout
               
block content

            div(class="container")
                div(class="row")
                    div(class="col-lg-12")
                        div(class="table-responsive")

                            table(id="tablaProductos" class="table table-striped table-bordered table-condensed")
                                thead(class="text-center")
                                    tr
                                        th Id
                                        th Nombre
                                        th Precio
                                        th Stock 
                                        th Caracteristica 
                                        th Editar
                                tbody
                                    each val in array
                                        tr
                                            td=val.id
                                            td=val.nombre  
                                            td=val.precio 
                                            td=val.stock 
                                            td=val.caracteristica 
                                            td
                                             button(type='button' class='btn btn-primary btnEditar') Editar    




                                tbody
            script(src="https://unpkg.com/axios/dist/axios.min.js") 
            script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js")  
            script( src="/javascripts/administrar.js")                        
                                    
